<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/address_search_list_background"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/tv22BlackBold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enter_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv18GreyNormal" />

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <include
        android:id="@+id/otp_fields"
        layout="@layout/otp_fields_small" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_2"
            style="@style/tv16GreyNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/resendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/tv_2"
            style="@style/tv16Bold"  />


    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <include
        android:id="@+id/btn_primary"
        layout="@layout/btn_primary" />

</LinearLayout>